#!/usr/bin/env bash
# Quick command to install tmux plugins

set -e

# Colors
GREEN='\033[0;32m'
BLUE='\033[0;34m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m'

info() { echo -e "${BLUE}ℹ${NC} $1"; }
success() { echo -e "${GREEN}✓${NC} $1"; }
warn() { echo -e "${YELLOW}⚠${NC} $1"; }
error() { echo -e "${RED}✗${NC} $1"; }

# Check if TPM exists
if [[ ! -d "$HOME/.tmux/plugins/tpm" ]]; then
  error "TPM not found!"
  echo ""
  info "Installing TPM..."
  git clone https://github.com/tmux-plugins/tpm "$HOME/.tmux/plugins/tpm"
  success "TPM installed"
fi

# Install plugins
if [[ -f "$HOME/.tmux/plugins/tpm/bin/install_plugins" ]]; then
  info "Installing tmux plugins..."
  echo ""

  # Start tmux server and set environment variable
  tmux start-server
  tmux set-environment -g TMUX_PLUGIN_MANAGER_PATH "$HOME/.tmux/plugins"

  # Run installer
  "$HOME/.tmux/plugins/tpm/bin/install_plugins"

  echo ""
  success "Done!"
  echo ""
  info "Plugins installed. To use them:"
  if [[ -n "$TMUX" ]]; then
    echo "  • Reload config: Ctrl+Space then r"
    echo "  • Or run: tmux source ~/.tmux.conf"
  else
    echo "  • Start tmux: tmux"
    echo "  • Or attach existing: tmux attach"
  fi
else
  error "TPM install script not found"
  exit 1
fi
